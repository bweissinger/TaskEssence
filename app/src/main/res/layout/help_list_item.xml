<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/help_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_subject_24dp"
            android:contentDescription="Subject icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>

        <TextView
            android:id="@+id/help_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/help_item_icon"
            android:layout_toEndOf="@+id/help_item_icon"
            android:textSize="13sp"
            android:textColor="?textColorPrimary" />

        <TextView
            android:id="@+id/help_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_item_title"
            android:layout_toRightOf="@+id/help_item_icon"
            android:layout_toEndOf="@+id/help_item_icon"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="?textColorSecondary"/>
    </RelativeLayout>

    <View
        android:id="@+id/help_item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorSeparator"
        android:layout_marginTop="16dp"/>

</LinearLayout>