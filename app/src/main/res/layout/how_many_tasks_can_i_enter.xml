<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="21sp"
        android:textColor="?textColorPrimary"
        android:textStyle="bold"
        android:text="How many tasks can I enter?"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?textColorPrimary"
        android:text="The maximum number of tasks you can enter is three. If you have uncompleted tasks from the previous list, they will carry over into the new list. This is part of the design philosophy of Task Essence. Read &quot;Understanding Task Essence&quot; for a better understanding of the philosophy."
        android:paddingBottom="16dp"/>

</LinearLayout>