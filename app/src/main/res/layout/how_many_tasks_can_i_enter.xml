<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="21sp"
        android:textColor="?textColorPrimary"
        android:textStyle="bold"
        android:text="How many tasks can I enter?"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?textColorPrimary"
        android:text="The maximum number of tasks you can enter is three. The minimum number of tasks that can be entered is one. However, this number is determined by how well you are completing your daily tasks."
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="?textColorPrimary"
        android:text="Gaining tasks"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?textColorPrimary"
        android:text="To gain a task, you must complete every task three days in a row. If you already have three tasks available, you cannot gain anymore tasks."
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="?textColorPrimary"
        android:text="Losing tasks"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?textColorPrimary"
        android:text="You lose a task if you fail to complete your tasks two days in a row. You cannot lose anymore tasks if you only have one remaining." />

</LinearLayout>